---
interface Props {
  day: string;
  title: string;
  time: string;
  dj: string;
  colorClass?: string;
}

const { day, title, time, dj, colorClass = '' } = Astro.props;

const dayAbbr = day.slice(0, 3).toUpperCase();
---

<div class={`show-pill ${colorClass}`} style="display: flex; overflow: hidden;">
  <div class="show-pill-left" style="display: flex; flex-direction: column; align-items: center; justify-content: center;">
    <span class="show-pill-day">{dayAbbr}</span>
    <span class="show-pill-time">{time}</span>
  </div>
  <div class="show-pill-right" style="display: flex; flex-direction: column; justify-content: center; flex: 1; min-width: 0;">
    <span class="show-pill-title">{title}</span>
    <hr class="show-pill-hr" />
    {dj && <span class="show-pill-dj">host: {dj}</span>}
  </div>
</div>

<style>
  .show-pill {
    background: white;
    border-radius: 20px;
    font-family: 'Courier New', Courier, monospace;
  }

  .show-pill-left {
    padding: 16px 20px;
    min-width: 80px;
    border-right: 2px solid #e0e0e0;
    gap: 4px;
  }

  .show-pill-day {
    font-family: 'Cooper Black Regular', monospace;
    font-size: 1.3em;
    letter-spacing: 0.02em;
  }

  .show-pill-time {
    background: black;
    color: white;
    font-size: 0.8em;
    font-weight: bold;
    padding: 2px 8px;
    border-radius: 4px;
  }

  .show-pill-right {
    padding: 16px 20px;
  }

  .show-pill-title {
    font-family: 'Cooper Black Regular', monospace;
    font-size: 1.2em;
    line-height: 1.2;
  }

  .show-pill-hr {
    border: none;
    border-top: 2px dashed #ccc;
    margin: 8px 0;
  }

  .show-pill-dj {
    font-size: 0.85em;
    color: #555;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }
</style>
