---
import ChatIcon from '../assets/icons/ChatIcon.svg';
---

<div
  class="ts-chat-wrap"
  x-data="{ open: false }"
  @ts-open-chat.window="open = true; $refs.chatInput.focus()"
  @click.outside="open = false"
  data-chat-ui
>
  <!-- Chat button -->
  <button
    class="ts-chat-btn"
    :class="{ 'ts-hidden': open }"
    @click.stop="open = true; $refs.chatInput.focus()"
  >
    <ChatIcon width={18} height={18} />
  </button>

  <!-- Input bar -->
  <div
    class="ts-chat-input-bar"
    :class="{ 'ts-open': open }"
  >
    <input
      type="text"
      maxlength="140"
      placeholder="say something..."
      x-ref="chatInput"
      @keydown.stop
      @keydown.enter="
        const text = $refs.chatInput.value.trim();
        if (text) { $dispatch('ts-send-chat', text); }
        $refs.chatInput.value = '';
        $refs.chatInput.blur();
        open = false;
      "
      @keydown.escape="open = false"
    />
  </div>
</div>

<style>
  .ts-chat-wrap {
    position: fixed;
    bottom: 108px;
    left: 50%;
    transform: translateX(-50%);
    width: calc(100% - 32px);
    max-width: 700px;
    z-index: 1001;
    pointer-events: none;
  }

  .ts-chat-btn {
    position: absolute;
    right: 0;
    bottom: 0;
    pointer-events: auto;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: none;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    color: #fff;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.5;
    transition: opacity 0.15s;
  }
  .ts-chat-btn:hover {
    opacity: 1;
  }
  .ts-chat-btn.ts-hidden {
    opacity: 0;
    pointer-events: none;
    transition: none;
  }

  .ts-chat-input-bar {
    width: 100%;
    box-sizing: border-box;
    background: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 16px;
    padding: 8px 12px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.12), 0 1px 4px rgba(0, 0, 0, 0.08);
    opacity: 0;
    transform: translateY(8px);
    pointer-events: none;
    transition: opacity 0.15s, transform 0.15s;
  }
  .ts-chat-input-bar.ts-open {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .ts-chat-input-bar input {
    width: 100%;
    border: none;
    background: transparent;
    outline: none;
    font: 16px/1.4 monospace;
    color: #1a1a1a;
  }
  .ts-chat-input-bar input::placeholder {
    color: #999;
  }

  @media (max-width: 480px) {
    .ts-chat-wrap {
      bottom: 90px;
      width: calc(100% - 20px);
    }
  }
</style>
