---
import PlayIcon from '../assets/icons/PlayIcon.svg';
import PauseIcon from '../assets/icons/PauseIcon.svg';
import StopIcon from '../assets/icons/StopIcon.svg';
---
<!-- Persistent audio elements -->
<audio id="radio" crossorigin="anonymous" transition:persist="radio-audio"></audio>
<audio id="recordingPlayer" crossorigin="anonymous" transition:persist="recording-audio"></audio>

<!-- Floating player pill -->
<div
  class="player-pill"
  x-data
  transition:persist="player-footer"
>
  <!-- Artwork -->
  <img
    class="player-artwork"
    :src="$store.player.metadata.artwork || '/cabbage-star.png'"
    alt=""
  />

  <!-- Info + scrubber -->
  <div class="player-info">
    <span
      class="player-show-name"
      x-text="$store.player.metadata.title || ($store.player.nowPlaying?.streamerDetails ? ($store.player.nowPlaying.streamerDetails.name + ' w/ ' + $store.player.nowPlaying.streamerDetails.dj) : 'cabbage.town radio')"
    ></span>
    <span
      class="player-subtitle"
      x-text="$store.player.metadata.date || ($store.player.nowPlaying ? ($store.player.nowPlaying.artist + ' \u2014 ' + $store.player.nowPlaying.title) : '')"
    ></span>

    <!-- Scrubber — only for recordings -->
    <template x-if="$store.player.type === 'recording'">
      <div class="player-scrubber">
        <span class="player-time" x-text="$store.player.formatTime($store.player.currentTime)"></span>
        <div class="player-track">
          <div
            class="player-progress"
            :style="`width: ${$store.player.duration > 0 ? ($store.player.currentTime / $store.player.duration * 100) : 0}%`"
          ></div>
          <input
            type="range"
            class="player-scrubber-input"
            min="0"
            :max="$store.player.duration"
            :value="$store.player.currentTime"
            @input="$store.player.seekTo(Number($event.target.value))"
          />
        </div>
        <span class="player-time" x-text="$store.player.formatTime($store.player.duration)"></span>
      </div>
    </template>
  </div>

  <!-- Play / Pause / Stop button -->
  <button class="player-play-btn" @click="$store.player.togglePlayback()">
    <!-- Live playing → stop square -->
    <template x-if="$store.player.isPlaying && $store.player.type === 'live'">
      <StopIcon width={26} height={26} />
    </template>
    <!-- Recording playing → pause bars -->
    <template x-if="$store.player.isPlaying && $store.player.type === 'recording'">
      <PauseIcon width={26} height={26} />
    </template>
    <!-- Not playing → play triangle -->
    <template x-if="!$store.player.isPlaying">
      <PlayIcon width={26} height={26} />
    </template>
  </button>
</div>

<script>
  function getRotationDeg(el: HTMLElement): number {
    const transform = getComputedStyle(el).transform;
    if (!transform || transform === 'none') return 0;
    const match = transform.match(/matrix\((.+)\)/);
    if (!match) return 0;
    const [a, b] = match[1].split(',').map(Number);
    let deg = Math.atan2(b, a) * (180 / Math.PI);
    if (deg < 0) deg += 360;
    return deg;
  }

  function initArtworkSpin(artwork: HTMLElement) {
    const Alpine = (window as any).Alpine;
    if (!Alpine) return;

    let spinning = false;

    Alpine.effect(() => {
      const playing: boolean = Alpine.store('player').isPlaying;

      if (playing && !spinning) {
        spinning = true;
        // Clear any wind-down transition, start fresh
        artwork.style.transition = 'border-radius 0.4s ease';
        artwork.style.borderRadius = '50%';
        artwork.style.transform = '';
        // Let the border-radius transition settle, then kick off the spin
        requestAnimationFrame(() => {
          artwork.style.animation = 'spin 3s linear infinite';
        });
      } else if (!playing && spinning) {
        spinning = false;
        // Freeze at current angle
        const angle = getRotationDeg(artwork);
        artwork.style.animation = 'none';
        artwork.style.transform = `rotate(${angle}deg)`;

        // Wind down to nearest upright (shortest path to 0/360)
        const target = angle <= 180 ? 0 : 360;
        requestAnimationFrame(() => {
          artwork.style.transition =
            'transform 0.6s cubic-bezier(0.33, 0, 0.15, 1), border-radius 0.4s ease';
          artwork.style.transform = `rotate(${target}deg)`;
          artwork.style.borderRadius = '';
        });

        // Clean up inline transform after wind-down finishes
        const cleanup = (e: TransitionEvent) => {
          if (e.propertyName !== 'transform') return;
          artwork.removeEventListener('transitionend', cleanup);
          if (!spinning) {
            artwork.style.transform = '';
            artwork.style.transition = '';
          }
        };
        artwork.addEventListener('transitionend', cleanup);
      }
    });
  }

  document.addEventListener('astro:page-load', () => {
    requestAnimationFrame(() => {
      const store = (window as any).Alpine?.store('player');
      if (!store) return;
      store.startNowPlayingPolling();

      const artwork = document.querySelector('.player-artwork') as HTMLElement | null;
      if (artwork && !(artwork as any)._spinInit) {
        (artwork as any)._spinInit = true;
        initArtworkSpin(artwork);
      }
    });
  });
</script>

<style>
  /* Floating player pill */
  .player-pill {
    position: fixed;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    box-sizing: border-box;
    width: calc(100% - 32px);
    max-width: 700px;
    background: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 24px;
    padding: 12px;
    display: flex;
    align-items: center;
    gap: 12px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.12), 0 1px 4px rgba(0, 0, 0, 0.08);
    z-index: 1000;
  }

  .player-artwork {
    width: 64px;
    height: 64px;
    border-radius: 12px;
    object-fit: cover;
    flex-shrink: 0;
    background: rgba(178, 68, 218, 0.1);
    transition: border-radius 0.4s ease;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .player-info {
    flex-grow: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .player-show-name {
    font-weight: bold;
    font-size: 1em;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #1a1a1a;
  }

  .player-subtitle {
    font-size: 0.85em;
    color: #888;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .player-scrubber {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-top: 4px;
  }

  .player-time {
    font-size: 0.75em;
    color: #999;
    width: 36px;
    flex-shrink: 0;
    text-align: center;
  }

  .player-track {
    flex-grow: 1;
    position: relative;
    height: 6px;
    background: rgba(178, 68, 218, 0.2);
    border-radius: 3px;
  }

  .player-progress {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    background: var(--daorange);
    border-radius: 3px;
    pointer-events: none;
  }

  .player-scrubber-input {
    -webkit-appearance: none;
    appearance: none;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: transparent;
    cursor: pointer;
    outline: none;
    margin: 0;
  }

  .player-scrubber-input::-webkit-slider-thumb {
    -webkit-appearance: none;
    width: 14px;
    height: 14px;
    background: var(--dayellow);
    border-radius: 50%;
    cursor: pointer;
    border: none;
    opacity: 0;
    transition: opacity 0.15s;
  }

  .player-track:hover .player-scrubber-input::-webkit-slider-thumb {
    opacity: 1;
  }

  .player-scrubber-input::-moz-range-thumb {
    width: 14px;
    height: 14px;
    background: var(--dayellow);
    border-radius: 50%;
    cursor: pointer;
    border: none;
    opacity: 0;
    transition: opacity 0.15s;
  }

  .player-track:hover .player-scrubber-input::-moz-range-thumb {
    opacity: 1;
  }

  .player-play-btn {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: #1a1a1a;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    cursor: pointer;
    border: none;
    transition: background 0.15s;
  }
  .player-play-btn:hover {
    background: #333;
  }

  @media (max-width: 480px) {
    .player-pill {
      bottom: 10px;
      width: calc(100% - 20px);
      padding: 10px;
      gap: 10px;
      border-radius: 20px;
    }
    .player-artwork {
      width: 52px;
      height: 52px;
      border-radius: 10px;
    }
    .player-play-btn {
      width: 42px;
      height: 42px;
    }
    .player-scrubber-input::-webkit-slider-thumb {
      opacity: 1;
    }
    .player-scrubber-input::-moz-range-thumb {
      opacity: 1;
    }
  }
</style>
